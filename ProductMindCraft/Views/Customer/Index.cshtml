@{
    ViewData["Title"] = "Customer";
}

<div class="col-12">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-9">
                    <h1><i class="fas fa-user"></i> Customer</h1>
                </div>
                <div class="col-sm-3" style="text-align:right;">
                    <button type="button" class="btn btn-outline-dark" onclick="addCustomer(0)"><i class="fas fa-plus"></i> Add New</button>
                </div>
            </div>
        </div>
    </section>
    <div class="m-2">
        <!-- Filter Section -->
        <div class="row mb-2">
            <div class="col-md-3">
                <input id="customerIdFilter" type="text" class="form-control" placeholder="Customer ID">
            </div>
            <div class="col-md-3">
                <input id="customerNameFilter" type="text" class="form-control" placeholder="Customer Name">
            </div>
            <div class="col-md-2">
                <input id="fromDate" type="date" class="form-control" placeholder="From Date">
            </div>
            <div class="col-md-2">
                <input id="toDate" type="date" class="form-control" placeholder="To Date">
            </div>
            <div class="col-md-2">
                <button type="button" class="btn btn-primary w-100" onclick="applyFilters()">Apply Filters</button>
            </div>
        </div>
        

    </div>
    <section class="content">
        <div class="card mb-0">
            <div class="card-body p-0 table-responsive tableFixHead">
                <div class="m-2" style="display: flex; justify-content: center;">
                    <input id="nameFilter" maxlength="100" type="text" name="table_search"
                           class="form-control float-right"
                           style="width: 100%;"
                           onkeypress="searchRefByFilterFromListing(event)"
                           placeholder="Search within a table">
                </div>

                <table id="customerTbl" class="table table-striped projects">
                    <thead>
                        <tr>
                            <th>CustomerId</th>
                            <th>Name</th>
                            <th>Aadhaar</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>Gender</th>
                            <th>Country</th>
                            <th>State</th>
                            <th>Registration Date</th>
                        </tr>
                    </thead>
                    <tbody id="customerTableBody">
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>


<div class="modal fade" id="modal-AddEditCustomer" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalLabel">Add Customer</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Modal content here -->
            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <button id="Add-submit-button" type="submit" value="Submit" class="btn btn-outline-dark" >Save</button>
                </div>
                <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/Scripts/view-js/customer.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

}
